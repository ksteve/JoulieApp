<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginBottom="2dp"
    android:layout_marginStart="2dp"
    android:layout_marginEnd="2dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/device_name"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="16dp"
            android:textAppearance="?attr/textAppearanceListItem"
            android:layout_toEndOf="@+id/checkBox"
            android:layout_marginTop="11dp"
            android:text="Device:"/>

        <TextView
            android:id="@+id/run_time"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:textAppearance="?attr/textAppearanceListItem"
            android:layout_alignBaseline="@+id/active_switch"
            android:layout_alignBottom="@+id/active_switch"
            android:layout_alignStart="@+id/device_name"
            android:text="Time:"/>

        <TextView
            android:id="@+id/days"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:textAppearance="?attr/textAppearanceListItem"
            android:layout_below="@+id/run_time"
            android:layout_alignStart="@+id/run_time"
            android:layout_marginTop="14dp"
            android:text="Days:"/>


        <Switch
            android:id="@+id/active_switch"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:checked="true"
            android:paddingEnd="16dp"
            android:text="Active" />

    </RelativeLayout>

</android.support.v7.widget.CardView>

