<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.kyle.joulieapp.Views.UsageOverviewFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="1dp">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:padding="1dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <android.support.v7.widget.CardView
            android:id="@+id/usage_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            app:cardElevation="1dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:padding="5dp">

                <TextView
                    android:id="@+id/avg_usage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="17.5 kWh"
                    android:textSize="32sp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:id="@+id/avg_usage_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/avg_usage"
                    android:text="Average Usage"
                    android:textSize="12sp"
                    android:layout_centerHorizontal="true"/>


                <TextView
                    android:id="@+id/usage_trend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/avg_usage_label"
                    android:layout_centerHorizontal="true"
                    android:text="- 5.2 %"
                    android:textSize="32sp"/>


            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cost_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            app:cardElevation="1dp">

            <RelativeLayout
                android:id="@+id/relativeLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:padding="5dp">

                <TextView
                    android:id="@+id/avg_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:text="$50"
                    android:textSize="32sp"/>

                <TextView
                    android:id="@+id/avg_cost_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/avg_cost"
                    android:layout_centerHorizontal="true"
                    android:text="Average Cost/Month"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/cost_trend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/avg_cost_label"
                    android:layout_centerHorizontal="true"
                    android:text="$5.00"
                    android:textSize="32sp"/>

            </RelativeLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/chart_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/linearLayout"
        android:layout_above="@id/graph_tabs"
        app:cardElevation="1dp">

        <RelativeLayout
            android:id="@+id/chart_relative_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:gravity="fill"
            android:padding="1dp">

            <RadioGroup
                android:id="@+id/rgChartDisplayType"
                android:layout_marginStart="1dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rbKilowatt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="kWh"/>

                <RadioButton
                    android:id="@+id/rbDollars"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/rbKilowatt"
                    android:text="$"/>
            </RadioGroup>

            <ImageButton
                android:id="@+id/filterBtn"
                style="@style/Widget.AppCompat.ImageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:background="?android:selectableItemBackground"
                android:src="@drawable/ic_filter_list_black_24dp"/>

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/chart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/filterBtn"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.design.widget.TabLayout
        android:id="@+id/graph_tabs"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_alignParentBottom="true"
        android:background="#d7d7d7"
        app:tabGravity="fill"
        app:tabMode="fixed"
        android:layout_marginBottom="8dp"/>

</RelativeLayout>



