<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="450dp"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            tools:context="com.example.kyle.joulieapp.UsageOverviewFragment"
            android:id="@+id/cardView"
            android:layout_margin="2dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp">

                <TextView
                    android:id="@+id/avg_usage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:text="17.5 kWh"
                    android:textSize="32sp"/>

                <TextView
                    android:id="@+id/avg_usage_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/avg_usage"
                    android:text="Average Usage"
                    android:textSize="12sp"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:background="@android:color/darker_gray"/>

                <TextView
                    android:id="@+id/avg_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/avg_cost_label"
                    android:text="$50"
                    android:textSize="32sp"/>

                <TextView
                    android:id="@+id/avg_cost_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/chart"
                    android:layout_alignParentEnd="true"
                    android:text="Average Cost/Month"
                    android:textSize="12sp"/>

                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/chart"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:layout_above="@+id/graph_tabs"
                    android:layout_below="@+id/avg_usage_label"
                    android:layout_marginTop="6dp"/>

                <android.support.design.widget.TabLayout
                    android:id="@+id/graph_tabs"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:background="#d7d7d7"
                    app:tabGravity="fill"
                    app:tabMode="fixed"/>

            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <include
            android:id="@+id/trends"
            layout="@layout/trends"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/cardView"
            android:layout_centerHorizontal="true"/>

        <include
            android:id="@+id/device_graph"
            layout="@layout/trends"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/trends"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>
</ScrollView>

